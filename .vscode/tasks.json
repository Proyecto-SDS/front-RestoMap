{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Iniciar Servidor Dev",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"isBackground": true,
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			},
			"problemMatcher": {
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "ready in"
				}
			}
		}
	]
}